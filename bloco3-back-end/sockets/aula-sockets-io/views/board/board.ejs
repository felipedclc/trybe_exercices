<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="http://localhost:4555/socket.io/socket.io.js"></script>
  <title>Document</title>
</head>

<body>
  <h1>Not√≠cias</h1>
  <ul id="news">
    <% news.forEach(notification => { %>
      <li>
        <%= notification.title %>: <%= notification.message %>
      </li>
    <% }) %>

  </ul>

  <script>
    const socket = window.io('http://localhost:4555'); // abrindo o sockeult

    socket.on('notification', ({ title, message }) => {
      const ul = document.querySelector('#news');
      if (!ul) return

      const li = document.createElement('li');
      const liText = document.createTextNode(`${title}: ${message}`);

      li.appendChild(liText);
      ul.appendChild(li);
    });
  </script>
</body>

</html>